<Window
    x:Class="CPAM.GestionDossiers.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CPAM.GestionDossiers"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="LioFifi - Gestion Dossiers"
    Icon="/Icons/LioFifi Brand.ico"
    Width="1500"
    Height="900"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  Menu vertical avec style moderne  -->
        <Border
            Grid.Column="0"
            Background="#FF1E3A5F"
            CornerRadius="0 10 10 0">
            <StackPanel Margin="0,20,0,0" Orientation="Vertical">
                <!--  Logo/Titre  -->
                <TextBlock
                    Margin="0,0,0,30"
                    HorizontalAlignment="Center"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="Assurance LioFifi" />

                <!--  Boutons menu avec icônes  -->
                <Button
                    x:Name="BtnAccueil"
                    Click="BtnAccueil_Click"
                    Style="{StaticResource MenuButtonStyle}">
                    <StackPanel Orientation="Horizontal">
                        <Image
                            Width="20"
                            Height="20"
                            Margin="0,0,10,0"
                            Source="/Icons/home.png" />
                        <TextBlock Foreground="White" Text="Accueil" />
                    </StackPanel>
                </Button>

                <Button
                    x:Name="BtnDossiers"
                    Click="BtnDossiers_Click"
                    Style="{StaticResource MenuButtonStyle}">
                    <StackPanel Orientation="Horizontal">
                        <Image
                            Width="20"
                            Height="20"
                            Margin="0,0,10,0"
                            Source="/Icons/folder.png" />
                        <TextBlock Foreground="White" Text="Dossiers" />
                    </StackPanel>
                </Button>

                <Button
                    x:Name="BtnStats"
                    Click="BtnStats_Click"
                    Style="{StaticResource MenuButtonStyle}">
                    <StackPanel Orientation="Horizontal">
                        <Image
                            Width="20"
                            Height="20"
                            Margin="0,0,10,0"
                            Source="/Icons/chart.png" />
                        <TextBlock Foreground="White" Text="Statistiques" />
                    </StackPanel>
                </Button>

                <!--  Séparateur  -->
                <Border
                    Height="1"
                    Margin="15,20"
                    Background="#3A5F8F" />

                <!--  Bouton de déconnexion  -->
                <Button
                    x:Name="BtnDeconnexion"
                    Margin="0,20,0,0"
                    Click="BtnDeconnexion_Click"
                    Style="{StaticResource MenuButtonStyle}">
                    <StackPanel Orientation="Horizontal">
                        <Image
                            Width="20"
                            Height="20"
                            Margin="0,0,10,0"
                            Source="/Icons/logout.png" />
                        <TextBlock Foreground="White" Text="Déconnexion" />
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>

        <!--  Contenu principal  -->
        <Frame
            x:Name="MainContentFrame"
            Grid.Column="1"
            NavigationUIVisibility="Hidden" />
    </Grid>
</Window>
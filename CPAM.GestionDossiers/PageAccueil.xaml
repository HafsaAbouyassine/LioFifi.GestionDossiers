<Page
    x:Class="CPAM.GestionDossiers.PageAccueil"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CPAM.GestionDossiers"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="PageAccueil"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="#FFF5F9FF"
    mc:Ignorable="d">

    <Page.Resources>
        <DropShadowEffect
            x:Key="ShadowEffect"
            BlurRadius="10"
            Opacity="0.2"
            ShadowDepth="2" />

        <Style x:Key="QuickActionButton" TargetType="Button">
            <Setter Property="Width" Value="180" />
            <Setter Property="Height" Value="80" />
            <Setter Property="Background" Value="White" />
            <Setter Property="BorderBrush" Value="#FFE0E9FF" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Foreground" Value="#FF1E3A5F" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Effect" Value="{StaticResource ShadowEffect}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="8">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    FontSize="20"
                                    Text="{TemplateBinding Tag}" />
                                <TextBlock
                                    Margin="0,5,0,0"
                                    HorizontalAlignment="Center"
                                    Text="{TemplateBinding Content}" />
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFE6F0FF" />
                                <Setter Property="BorderBrush" Value="#FFA7C4FF" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Offset="0" Color="#FFF5F9FF" />
                <GradientStop Offset="1" Color="#FFE6F0FF" />
            </LinearGradientBrush>
        </Grid.Background>

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                <!--  En-tête  -->
                <Border
                    Margin="0,0,0,20"
                    Padding="20"
                    Background="#FF1E3A5F"
                    CornerRadius="10">
                    <StackPanel>
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="28"
                            FontWeight="Bold"
                            Foreground="White"
                            Text="BIENVENUE" />
                        <TextBlock
                            Margin="0,5,0,0"
                            HorizontalAlignment="Center"
                            FontSize="16"
                            Foreground="#FFA7C4FF"
                            Text="Gestion des dossiers CPAM" />
                    </StackPanel>
                </Border>

                <!--  Cartes statistiques  -->
                <WrapPanel Margin="0,0,0,20" HorizontalAlignment="Center">
                    <Border
                        Width="220"
                        Height="120"
                        Margin="10"
                        Background="White"
                        CornerRadius="10"
                        Effect="{StaticResource ShadowEffect}">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock
                                HorizontalAlignment="Center"
                                Foreground="#FF5F7A9F"
                                Text="Dossiers en cours" />
                            <TextBlock
                                x:Name="txtEnCours"
                                Margin="0,5"
                                HorizontalAlignment="Center"
                                FontSize="36"
                                FontWeight="Bold"
                                Foreground="#FF1E3A5F" />
                        </StackPanel>
                    </Border>

                    <Border
                        Width="220"
                        Height="120"
                        Margin="10"
                        Background="White"
                        CornerRadius="10"
                        Effect="{StaticResource ShadowEffect}">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock
                                HorizontalAlignment="Center"
                                Foreground="#FF5F7A9F"
                                Text="Dossiers traités" />
                            <TextBlock
                                x:Name="txtTerminer"
                                Margin="0,5"
                                HorizontalAlignment="Center"
                                FontSize="36"
                                FontWeight="Bold"
                                Foreground="#FF1E3A5F" />
                        </StackPanel>
                    </Border>

                    <Border
                        Width="220"
                        Height="120"
                        Margin="10"
                        Background="White"
                        CornerRadius="10"
                        Effect="{StaticResource ShadowEffect}">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock
                                HorizontalAlignment="Center"
                                Foreground="#FF5F7A9F"
                                Text="En attente" />
                            <TextBlock
                                x:Name="txtEnAttente"
                                Margin="0,5"
                                HorizontalAlignment="Center"
                                FontSize="36"
                                FontWeight="Bold"
                                Foreground="#FF1E3A5F" />
                        </StackPanel>
                    </Border>
                </WrapPanel>

                <!--  Section actions rapides  -->
                <TextBlock
                    Margin="0,0,0,10"
                    FontSize="16"
                    FontWeight="Bold"
                    Foreground="#FF1E3A5F"
                    Text="ACTIONS RAPIDES" />

                <WrapPanel
                    Width="765"
                    Margin="0,0,0,20"
                    HorizontalAlignment="Stretch">
                    <Button
                        x:Name="BtnNouveauDossier"
                        Margin="5"
                        Click="BtnNouveauDossier_Click"
                        Content="Nouveau dossier"
                        Style="{StaticResource QuickActionButton}"
                        Tag="📋" />
                    <Button
                        x:Name="txtRecherche"
                        Margin="5"
                        Click="RechercherDossier"
                        Content="Rechercher"
                        Style="{StaticResource QuickActionButton}"
                        Tag="🔍" />
                    <Button
                        Margin="5"
                        Content="Imprimer"
                        Style="{StaticResource QuickActionButton}"
                        Tag="🖨️" />
                    <Button
                        Content="Exporter"
                        Style="{StaticResource QuickActionButton}"
                        Tag="📤" />
                </WrapPanel>

                <!--  Dernières activités  -->
                <Border
                    Padding="15"
                    Background="White"
                    CornerRadius="10"
                    Effect="{StaticResource ShadowEffect}">
                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,10"
                            FontSize="16"
                            FontWeight="Bold"
                            Foreground="#FF1E3A5F"
                            Text="DERNIÈRES ACTIVITÉS" />

                        <!--  Exemple d'activités - à remplacer par un binding réel  -->
                        <StackPanel x:Name="DernieresActivitesPanel" />
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>